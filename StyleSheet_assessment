

/* Background colour */

body {
    background-color: var(--c-background-color);
}


/* background colour of header and footer */

header, footer {
    background-color: c-background-highlights;
}


/* text colour */

main, footer, header {
    color: base-font-color;
}


/* Style links */

article a {
    color: c-magenta;
}

article a:hover {
    color: c-orange;
}


/* Create borders around subsections */

article section {
    border: 3px solid c-cyan;
}

